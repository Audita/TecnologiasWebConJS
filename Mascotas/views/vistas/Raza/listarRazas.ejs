<div class="page-header" >
  <h1 align="center">LISTAR RAZAS</h1>
</div>

<div class="row">

  <% for(var i=0; i<razas.length; i++){ %>
  <div class="col-sm-4">
    <h3 class="text-center"> ID: <%=razas[i].id%> -  <%=razas[i].nombre%></h3>
    <a style="color:white" href="/Raza/borrarRaza?id=<%=razas[i].id%>">
      <button class="btn btn-block btn-danger"> Borrar</button>
    </a>
    <br>
    <a style="color:white" href="/editarRaza?id=<%=razas[i].id%>">
      <button class="btn btn-block btn-success"> Editar</button>
    </a>
  </div>
  <%  } %>

</div>
